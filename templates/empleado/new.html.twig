{% extends 'base.html.twig' %}

{% block title%} Crear Empleado {% endblock%}

{% block body%}
    <header>
        <div>
            <nav class="bg-white border-gray-200 dark:bg-gray-900">
                <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
                <p class="flex items-center space-x-3 rtl:space-x-reverse">
                    <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Ingrese datos del Empleado</span>
                </p>
                <div class="hidden w-full md:block md:w-auto" id="navbar-default">
                    <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                    <li>
                        <a href="{{ path('app_empleado_index') }}" class="block py-2 px-3 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500" aria-current="page">Regresar</a>
                    </li>
                    </ul>
                </div>
                </div>
            </nav>
        </div>
    </header>

    <section class="m-4">
        {{include('empleado/_formc.html.twig', {'button_label': 'Guardar'}) }}
    </section>

    {% if form.vars.errors|length > 0 %}
        <div class="text-red-500">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    {{ form_errors(form) }}

{% endblock%}