{% extends 'base.html.twig' %}

{% block title%} Crear Empleado {% endblock%}

{% block body%}
    <header>
        <div>
            <p>Ingresa datos del nuevo empleado</p>
        </div>
    </header>

    <section>
        {{include('empleado/_formc.html.twig') }}

        <form action="{{ path('app_empleado_index') }}" method="GET">
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700">
                Regresar
            </button>
        </form>
    </section>

    {% if form.vars.errors|length > 0 %}
        <div class="text-red-500">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    {{ form_errors(form) }}

{% endblock%}